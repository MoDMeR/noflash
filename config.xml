<widget
  xmlns="http://www.w3.org/ns/widgets"
  xmlns:gap="http://phonegap.com/ns/1.0"
  id="io.noflash"
  version="0.2.0">
  <name>No Flash</name>
  <description>Track summoner spells.</description>
  <author email="ngryman@gmail.com" href="http://ngryman.sh">
    Nicolas Gryman
  </author>
  <content src="index.html" />
  <access origin="*"></access>

  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-headercolor" />
  <plugin name="cordova-plugin-insomnia" />
  <plugin name="cordova-plugin-statusbar" />
  <plugin name="cordova-plugin-whitelist" />

  <preference name="orientation" value="portrait" />
  <preference name="HeaderColor" value="#1f3f54" />
  <preference name="StatusBarOverlaysWebView" value="true" />
  <preference name="StatusBarBackgroundColor" value="#1f3f54" />

  <platform name="ios" />

  <platform name="android">
    <icon src="icon-ldpi.png" qualifier="ldpi" />
    <icon src="icon-mdpi.png" qualifier="mdpi" />
    <icon src="icon-hdpi.png" qualifier="hdpi" />
    <icon src="icon-xhdpi.png" qualifier="xhdpi" />
    <icon src="icon-xxhdpi.png" qualifier="xxhdpi" />
    <icon src="icon-xxhdpi.png" qualifier="xxxhdpi" />
  </platform>
</widget>
